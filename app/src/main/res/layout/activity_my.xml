<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.zqzy.activity.MyActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,16:9"
        android:background="@mipmap/my_background"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="返回"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="直播培训"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/name"
        android:text="NULL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintBottom_toBottomOf="@id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        app:layout_constraintLeft_toRightOf="@id/img_line"
        android:id="@+id/img_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_class"
        app:layout_constraintBottom_toBottomOf="@+id/txt_class"
        app:layout_constraintTop_toTopOf="@id/txt_class" />

    <TextView
        android:id="@+id/txt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的课程"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@id/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintTop_toTopOf="@id/txt_class" />

    <ImageView
        app:layout_constraintLeft_toRightOf="@id/img_line"
        android:id="@+id/img_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_order"
        app:layout_constraintBottom_toBottomOf="@id/txt_order"
        app:layout_constraintTop_toTopOf="@id/txt_order" />

    <TextView
        android:id="@+id/txt_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的订单"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@id/line_one" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintTop_toTopOf="@id/txt_order" />

    <ImageView
        app:layout_constraintLeft_toRightOf="@id/img_line"
        android:id="@+id/img_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shop_car"
        app:layout_constraintBottom_toBottomOf="@id/txt_car"
        app:layout_constraintTop_toTopOf="@id/txt_car" />

    <TextView
        android:id="@+id/txt_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的购物车"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@id/line_two" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintTop_toTopOf="@id/txt_car"  />

    <ImageView
        app:layout_constraintLeft_toRightOf="@id/img_line"
        android:id="@+id/img_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_class"
        app:layout_constraintBottom_toBottomOf="@id/txt_invoice"
        app:layout_constraintTop_toTopOf="@id/txt_invoice" />

    <TextView
        android:id="@+id/txt_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的发票查询"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@id/line_three" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintTop_toTopOf="@id/txt_invoice" />

    <android.support.constraint.Guideline
        android:id="@+id/left_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />
    <android.support.constraint.Guideline
        android:id="@+id/img_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <android.support.constraint.Guideline
        android:id="@+id/right_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/txt_class" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/line_two"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_order" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/line_three"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/txt_car" />
</android.support.constraint.ConstraintLayout>
